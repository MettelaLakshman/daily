#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string s;
        cin>>s;
        int c=0;
        for(int i=0;i<s.size();i++)
        {
            if(s[i]=='-')
            {
                c-=1;
            }
            else c+=1;
        }
        if(c<0)
        {
            cout<<abs(c)<<endl;
        }
        else cout<<c<<endl;
    }
}
